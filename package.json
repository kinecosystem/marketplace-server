		"express-http-context": "^1.2.0",
		"hot-shots": "^5.9.1",
		"http-status-codes": "^1.3.0",
		"jsonwebtoken": "^8.1.1",
		"moment": "^2.20.1",
		"nodemon": "^1.18.8",
		"pg": "7.4.3",
		"pg-hstore": "2.3.2",
		"redis": "^2.8.0",
		"redis-mock": "^0.21.0",
		"redlock": "^3.1.2",
		"reflect-metadata": "^0.1.12",
